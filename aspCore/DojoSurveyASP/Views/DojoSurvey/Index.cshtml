@model User

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
</head>
<body class="d-flex justify-content-center">
    <form class= "container border border-3 border-dark m-5 p-5" asp-action="result" asp-controller="DojoSurvey" method="POST">
        <div class="row d-flex justify-content-between align-items-between">
            <span asp-validation-for="Name" class="text-danger"></span>
            <label asp-for = "Name" class="col fs-4">Name</label>
            <input type= "text" asp-for= "Name" class="col border-3 border-dark">
        </div>
        <div class="row d-flex justify-content-between align-items-between mt-3">
            <span asp-validation-for="Location"></span>
            <label asp-for="Location" class="col fs-4">Dojo Location</label>
            <select asp-for="Location" class="col border-3 border-dark">
                <option value="Seattle">Seattle</option>
                <option value="Chicago">Chicago</option>
                <option value="Online">Online</option>
            </select>
        </div>
        <div class="row d-flex justify-content-between align-items-between mt-3">
            <span asp-validation-for="Language"></span>
            <label asp-for="Language" class="col fs-4">Favorite Language:</label>
            <select asp-for="Language" class="col border-3 border-dark">
                <option value="C#">C#</option> 
                <option value="English">Python</option> 
            </select>
        </div>
        <div class="d-flex flex-column">
            <label asp-for="Comment" class="mt-3 fs-4">Comment (optional):</label>
            <span asp-validation-for="Comment" class="text-danger"></span>
            <textarea asp-for="Comment" cols="10" rows="5" class="mt-3 border-3 border-dark"></textarea>
        </div class="d-flex justify-content-end">
        <div class="d-flex justify-content-end">
            <input type= "submit" value= "Button" class="mt-3 bg-info border-2 border-dark px-2 text-light">
        </div>
    </form>
</body>
</html>