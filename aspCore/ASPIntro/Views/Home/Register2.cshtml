@* The model here is the data that is being displayed AND created *@
@model RegisterView

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Register</title>
    <link rel="stylesheet" href="~/styles.css">

</head>

<body class="bg-dark text-light container">
    <h2>Register</h2>
    <p>Message: @Model.Message</p>
    <form action="/users/process-registration2" method="POST">
    <label>First Name</label>
    @* The name attr NEEDS to match a prop name from the Model. *@
    <input type="text" name="NewUser.FirstName">

    <label>Last Name</label>
    <input type="text" name="NewUser.LastName">
    <button>Submit</button>
    </form>
</body>

</html>