@{
    ViewData["Title"] = "Home Page";
}

@model List<Dish>

<div class="text-center">
    <h1 class="display-4">Welcome to CRUDelicious</h1>
    <h4 class="m-5">Check out some recent dishes!</h4>

    <div class="border-top border-dark text-left pt-5">
        @foreach (Dish dish in Model)
        {
            <p>
            <a asp-controller="Dishes" asp-action="Details" asp-route-dishId= "@dish.DishId">@dish.Name</a>
            by @dish.Chef
            </p>
        }
    </div>
    @* <p>Learn about <a href="https://docs.microsoft.com/aspnet/core">building Web apps with ASP.NET Core</a>.</p> *@
</div>
