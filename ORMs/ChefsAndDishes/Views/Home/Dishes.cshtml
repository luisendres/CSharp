@model List<Dish>

@{
    ViewData["Title"] = "Dishes Page";
}

<div class="text-center">
    <h1><a asp-controller="Home" asp-action="Index">Chefs</a> | Dishes</h1>
</div>
<div>
    <table class="table table-striped">
        <tr>
            <th>Name</th>
            <th>Chef</th>
            <th>Tastiness</th>
            <th>Calories</th>
        </tr>
        @foreach (Dish dish in Model)
        {
            <tr>
                <td>@dish.Name</td>
                <td>@dish.Author.FullName()</td>
                <td>@dish.Tastiness</td>
                <td>@dish.Calories</td>
            </tr>
        }
    </table>
</div>